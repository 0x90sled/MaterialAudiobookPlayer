<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="sequential">
    <fade android:duration="100">
        <targets>
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@id/toolbar" />
        </targets>
    </fade>
    <changeImageTransform android:duration="20">
        <targets>
            <target android:targetName="@string/cover_transition" />
            <target android:targetName="@string/cover_transition" />
        </targets>
    </changeImageTransform>
    <slide
        android:slideEdge="top"
        android:duration="200">
        <targets>
            <target android:targetId="@id/book_spinner" />
            <target android:targetId="@id/played" />
            <target android:targetId="@id/seekBar" />
            <target android:targetId="@id/maxTime" />
        </targets>
    </slide>
    <slide
        android:slideEdge="top"
        android:duration="200">
        <targets>
            <target android:targetId="@id/previous" />
            <target android:targetId="@id/rewind" />
            <target android:targetId="@id/play" />
            <target android:targetId="@id/fast_forward" />
            <target android:targetId="@id/next" />
        </targets>
    </slide>
</transitionSet>