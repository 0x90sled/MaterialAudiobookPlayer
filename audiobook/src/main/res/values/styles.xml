<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="colorAccentDark">@color/light_accent_dark</item>
        <item name="android:imageButtonStyle">@style/CustomButtonStyle</item>
        <item name="md_dark_theme">false</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>
        <item name="colorAccentDark">@color/dark_accent_dark</item>
        <item name="android:imageButtonStyle">@style/CustomButtonStyle</item>
        <item name="md_dark_theme">true</item>
    </style>

    <style name="CustomButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="notification_big_text">
        <item name="android:textColor">@color/notification_text_color_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="notification_small_text">
        <item name="android:textColor">@color/notification_text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>